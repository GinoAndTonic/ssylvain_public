\begin_inset Formula 
\begin{eqnarray*}
ln\left(\frac{\Pi_{t+\tau}}{\Pi_{t}}\right) & = & \int_{t}^{t+\tau}(\rho^{N}-\rho^{R})^{'}X_{s}ds\\
\\
\frac{\partial}{\partial\tau}ln\left(\frac{\Pi_{t+\tau}}{\Pi_{t}}\right) & = & (\rho^{N}-\rho^{R})^{'}X_{t+\tau}\\
\\
Z_{t,t+\tau} & \equiv & \left(\begin{array}{c}
X_{t+\tau}\\
ln\left(\Pi_{t+\tau}/\Pi_{t}\right)
\end{array}\right)\qquad\text{the augmented state vector}\\
\\
dZ_{t,t+\tau} & = & \underbrace{\left(\begin{array}{cc}
K^{P} & 0\\
0 & 0
\end{array}\right)\left(\begin{array}{c}
\theta^{P}\\
0
\end{array}\right)}_{K}dt-\underbrace{\left(\begin{array}{cc}
K^{p} & 0\\
-(\rho^{N}-\rho^{R})^{'} & 0
\end{array}\right)}_{-\theta}Z_{t,t+\tau}dt+\underbrace{\left(\begin{array}{cc}
\Sigma & 0\\
0 & 0
\end{array}\right)}_{\bar{\Sigma}}\underbrace{\left(\begin{array}{c}
dW_{t+\tau}\\
0
\end{array}\right)}_{d\bar{W}_{t+\tau}}\\
\\
Z_{t,t+\tau} & = & Z_{t,t}+\int_{t}^{t+\tau}Kds+\int_{t}^{t+\tau}\theta Z_{t,s}ds+\int_{t}^{t+\tau}\bar{\Sigma}d\bar{W}_{s}\\
\\
m_{t,t+\tau}=E_{t}\left[Z_{t,t+\tau}\right] & = & Z_{t,t}+\int_{t}^{t+\tau}Kds+E_{t}\left[\int_{t}^{t+\tau}\theta Z_{t,s}ds\right]\equiv m\left\{ \tau\right\} \\
\\
\frac{\partial}{\partial\tau}m\left\{ \tau\right\}  & = & K+\theta m\left\{ \tau\right\} \\
\\
m_{t,t}=m\left\{ 0\right\} = & = & Z_{t,t}=\left(\begin{array}{c}
X_{t}\\
0
\end{array}\right)\\
\\
v_{t,t+\tau}=Var_{t}\left[Z_{t,t+\tau}\right]=v\left\{ \tau\right\}  & = & E_{t}\left[\left(\int_{t}^{t+\tau}\theta Z_{t,s}ds-E_{t}\left[\int_{t}^{t+\tau}\theta Z_{t,s}ds\right]\right)\left(\int_{t}^{t+\tau}\theta Z_{t,s}ds-E_{t}\left[\int_{t}^{t+\tau}\theta Z_{t,s}ds\right]\right)^{'}\right]\\
