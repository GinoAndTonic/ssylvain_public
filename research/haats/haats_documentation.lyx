\begin_layout Subsubsection
\paragraph_spacing onehalf
Kalman gain
\end_layout

\begin_layout Standard
\paragraph_spacing onehalf
Let us first derive the prediction step
\end_layout

\begin_layout Standard
\paragraph_spacing onehalf
\begin_inset Formula 
\begin{eqnarray*}
\hat{X}_{k|k-1} & = & \left(I-exp\left(-K^{p}\Delta\right)\right)\theta^{P}+exp\left(-K^{p}\Delta\right)\hat{X}_{k-1|k-1}\\
\\
X_{k}-\hat{X}_{k|k-1} & = & exp\left(-K^{p}\Delta\right)\left(X_{k-1}-\hat{X}_{k-1|k-1}\right)+\eta_{k}\\
\\
\Rightarrow\hat{V}_{k|k-1} & = & exp\left(-K^{p}\Delta\right)\hat{V}_{k-1|k-1}exp\left(-K^{p}\Delta\right)^{'}+Q_{k}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\paragraph_spacing onehalf
The update steps are derived below.
 
\begin_inset Formula $G_{k}$
\end_inset

 minimizes the mean square posteriori error (
\begin_inset Formula $E\left[||X_{k}-\hat{X}_{k|k}||^{2}\right]$
\end_inset

) given
\begin_inset Formula $\hat{X}_{k|k}=\hat{X}_{k|k-1}+G_{k}\varepsilon_{k}$
\end_inset

.
 Let 
\begin_inset Formula $\hat{V}_{k|k}=cov\left(X_{k}-\hat{X}_{k|k}\right)$
\end_inset

 and 
\begin_inset Formula $\hat{V}_{k|k-1}=cov\left(X_{k}-\hat{X}_{k|k-1}\right)$
\end_inset

 
\begin_inset Formula 
\begin{eqnarray*}
\hat{V}_{k|k} & = & cov\left(X_{k}-\hat{X}_{k|k}\right)\\
\\
 & = & cov\left(X_{k}-\left(\hat{X}_{k|k-1}+G_{k}\varepsilon_{k}\right)\right)\\
\\
 & = & cov\left(X_{k}-\left(\hat{X}_{k|k-1}+G_{k}\left(y_{k}-A_{0}-A_{1}\hat{X}_{k|k-1}\right)\right)\right)\\
\\
 & = & cov\left(X_{k}-\left(\hat{X}_{k|k-1}+G_{k}\left(A_{0}+A_{1}X_{k}+\epsilon_{t}-A_{0}-A_{1}\hat{X}_{k|k-1}\right)\right)\right)\\
\\
 & = & cov\left(\left(I-G_{k}A_{1}\right)\left(X_{k}-\hat{X}_{k|k-1}\right)-G_{k}\epsilon_{t}\right)\\
\\
 & = & \left(I-G_{k}A_{1}\right)cov\left(X_{k}-\hat{X}_{k|k-1}\right)\left(I-G_{k}A_{1}\right)^{'}+G_{k}cov\left(\epsilon_{t}\right)G_{k}^{'}\\
\\
\hat{V}_{k|k} & = & \left(I-G_{k}A_{1}\right)\hat{V}_{k|k-1}\left(I-G_{k}A_{1}\right)^{'}+G_{k}\Phi G_{k}^{'}\\
\\
\hat{V}_{k|k} & = & \left(\hat{V}_{k|k-1}-G_{k}A_{1}\hat{V}_{k|k-1}\right)\left(I-G_{k}A_{1}\right)^{'}+G_{k}\Phi G_{k}^{'}\\
\\
\hat{V}_{k|k} & = & \hat{V}_{k|k-1}\left(I-G_{k}A_{1}\right)^{'}-G_{k}A_{1}\hat{V}_{k|k-1}+G_{k}S_{k}G_{k}^{'}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\paragraph_spacing onehalf
\begin_inset Formula 
\begin{eqnarray*}
E\left[||\hat{X}_{k}-\hat{X}_{k|k}||^{2}\right] & = & tr\left(\hat{V}_{k|k}\right)\\
\\
 &  & \text{FOC wrt }G_{k}:\\
0 & = & -\hat{V}_{k|k-1}\left(A_{1}\right)^{'}-\left(A_{1}\hat{V}_{k|k-1}\right)^{'}+2G_{k}S_{k}\\
 &  & \text{since }\hat{V}_{k|k-1}\text{ is symmetric}\\
0 & = & 2G_{k}S_{k}-2(\hat{V}_{k|k-1})^{'}A_{1}^{'}\\
\\
\Rightarrow G_{k} & = & (\hat{V}_{k|k-1})^{'}A_{1}^{'}(S_{k})^{-1}=\hat{V}_{k|k-1}A_{1}^{'}(S_{k})^{-1}\\
\\
\hat{V}_{k|k} & = & \hat{V}_{k|k-1}\left(I-\hat{V}_{k|k-1}A_{1}^{'}(S_{k})^{-1}A_{1}\right)^{'}-\hat{V}_{k|k-1}A_{1}^{'}(S_{k})^{-1}A_{1}\hat{V}_{k|k-1}\\
 &  & +\hat{V}_{k|k-1}A_{1}^{'}(S_{k})^{-1}S_{k}\left(\hat{V}_{k|k-1}A_{1}^{'}(S_{k})^{-1}\right)^{'}\\
\\
\hat{V}_{k|k} & = & \hat{V}_{k|k-1}-2\hat{V}_{k|k-1}A_{1}^{'}(S_{k})^{-1}A_{1}\hat{V}_{k|k-1}+\hat{V}_{k|k-1}A_{1}^{'}\left(\hat{V}_{k|k-1}A_{1}^{'}(S_{k})^{-1}\right)^{'}\\
\\
\hat{V}_{k|k} & = & \hat{V}_{k|k-1}-2\hat{V}_{k|k-1}A_{1}^{'}(S_{k})^{-1}A_{1}\hat{V}_{k|k-1}+\hat{V}_{k|k-1}A_{1}^{'}\left((S_{k})^{-1}\right)^{'}A_{1}\hat{V}_{k|k-1}^{'}\\
\\
\hat{V}_{k|k} & = & \hat{V}_{k|k-1}-\hat{V}_{k|k-1}A_{1}^{'}(S_{k})^{-1}A_{1}\hat{V}_{k|k-1}\\
\\
\Rightarrow\hat{V}_{k|k} & = & \hat{V}_{k|k-1}-G_{k}A_{1}\hat{V}_{k|k-1}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\paragraph_spacing onehalf
\begin_inset Formula 
\begin{eqnarray*}
\varepsilon_{k} & = & y_{k}-A_{0}-A_{1}\hat{X}_{k|k-1}\qquad\text{innovation}\\
\\
\varepsilon_{k} & = & \epsilon_{k}+A_{1}\left(X_{k}-\hat{X}_{k|k-1}\right)\\
\\
S_{k}=cov(\varepsilon_{k}) & = & \Phi+A_{1}\hat{V}_{k|k-1}A_{1}
\end{eqnarray*}

\end_inset


\end_layout

